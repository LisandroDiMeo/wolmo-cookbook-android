<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bAnimationsMotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/static_spacing_medium"
        android:layout_marginTop="@dimen/static_spacing_medium"
        android:layout_marginEnd="@dimen/static_spacing_medium"
        android:text="Simple Animations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/bViewPagerLottie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/static_spacing_medium"
        android:layout_marginTop="@dimen/static_spacing_medium"
        android:layout_marginEnd="@dimen/static_spacing_medium"
        android:text="ViewPager Lottie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bAnimationsMotion" />
  
    <Button
        android:id="@+id/bViewPagerMotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/static_spacing_medium"
        android:layout_marginTop="@dimen/static_spacing_medium"
        android:layout_marginEnd="@dimen/static_spacing_medium"
        android:layout_marginBottom="@dimen/static_spacing_medium"
        android:text="ViewPager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bViewPagerLottie" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/static_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_kotlin" />
</android.support.constraint.ConstraintLayout>