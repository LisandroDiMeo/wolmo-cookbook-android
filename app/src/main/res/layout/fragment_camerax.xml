<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextureView
		android:id="@+id/vCamera"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<View
		android:id="@+id/vCameraTouchHandler"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<Button
		android:id="@+id/vShutter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/spacing_large_extra"
		android:enabled="false"
		android:text="Capturar"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent" />

	<Button
		android:id="@+id/vFlipButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_large_extra"
		android:enabled="false"
		android:text="Flip"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/vImage"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Close"
		android:visibility="gone"
		android:id="@+id/vCloseImageButton"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>